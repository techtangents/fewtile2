#!/bin/sh

here=`cd \`dirname $0\` && pwd`
root=`cd "$here"/.. && pwd`
scratch="$root/scratch"
dist="$root/dist"
src="$root/src/elm"

clean() {
  if [ -d "$1" ]; then
    rm -rf "$1" && mkdir -p "$1"
  fi
}

cleanDirs() {
  clean "$scratch" &&
  clean "$dist"
}

compile() {
  cd "$src" &&
  elm -b "$scratch" --make Techtangents/Fewtile/Main.elm
}

gather() {
  rsync -aH --exclude '*.elm' "$scratch/" "$dist/"
}

cleanDirs && compile && gather
